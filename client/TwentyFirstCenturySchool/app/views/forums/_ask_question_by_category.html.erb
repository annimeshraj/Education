<div class="modal bs-example-modal-lg fade" id="question_by_category_model" tabindex="-1" role="dialog" aria-labelledby="applyModalLabel" aria-hidden="true">
    <div class="modal-dialog  modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                <h4 class="modal-title" id="myModalLabel">
                    <div class="head_4">
                      <p>ASK A QUESTION BY CATEGORY</p>
                    </div>
                </h4>
            </div>
            <div class="modal-body">
                <%= form_tag("/forums", :method => "post", :class=> "register") do %>
                    <div class="section">
                        <label for="title" class="field prepend-icon">
                            <%= text_field_tag 'title', @question['title'] ,:class=> "form-control",:placeholder=>"What's your question? Be specific.",:required => true,:autofocus=>true %>
                        </label>
                    </div>
                    <div class="section">
                        <label for="password" class="field prepend-icon">
                            <%= cktext_area_tag 'description_by_category', @question['description_by_category'], :cols => 40, :ckeditor => {:uiColor => '#AADC6E', :toolbar => 'Full'},:required => true,:autofocus=>true %>
                        </label>
                    </div>
                    <div class="section">
                        <label for="category" class="field prepend-icon">                            
                            <%= text_field_tag 'category', @question['category'] ,:class=> "form-control",:placeholder=>"Category" %>
                        </label>
                    </div>
                    <div class="section">                       
                        <%= submit_tag("Save") %>
                    </div>
                <% end %>
            </div>
        </div>
    </div>
</div>
